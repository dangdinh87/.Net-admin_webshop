@model MyLibary.Model.HoaDon

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa</h2>

<h3>Bán có muốn xóa hóa đơn này ?</h3>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            Mã Hóa Đơn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt>
            Thời Gian Mua
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayMua)
        </dd>

        <dt>
            Tên Khách Hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NguoiDung.TenNV)
