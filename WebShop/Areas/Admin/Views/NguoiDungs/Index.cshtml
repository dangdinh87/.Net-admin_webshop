@model IEnumerable<MyLibary.Model.NguoiDung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header border-0">
                <div class="row align-items-center">
                    <div class="col">
                        <h3>Danh sách người dùng</h3>
                    </div>
                    <div class="col">
                        @using (Html.BeginForm("Index", "NguoiDungs", FormMethod.Get, new { @class = "form-inline" }))
                        {
                            <div class="form-group col-8">  <input type="text" name="searchString" value="@ViewBag.searchString" placeholder="Nhập người dùng cần tìm" class="form-control w-100" /></div>
                            <div class="form-group col-4"> <button type="submit" class="btn btn-block btn-default">Tìm Kiếm</button></div>

                        }

                    </div>
                    <div class="col text-right">
                        @Html.ActionLink("Thêm Người Dùng", "Create", "", new { @class = "btn btn-success btn-sm m-1" })
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <!-- Projects table -->
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                Tên Người Dùng
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DiaChi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SoDienThoai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quyen)
                            </th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TenNV)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaChi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quyen)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.id }, new { @class = "btn btn-default btn-sm " })
                                    @Html.ActionLink("Xem", "Details", new { id = item.id }, new { @class = "btn btn-warning btn-sm " })
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.id }, new { @class = "btn btn-success btn-sm " })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
