@model MyLibary.Model.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin chi tiết</h2>

<div>
    <h4>Sản Phẩm</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DanhMuc.TenLoai)
        </dd>

        <dt>
            Tên Sản Phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
            Mô Tả Sản Phẩm
        </dt>

        <dd style="max-width:300px">
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            Đơn Giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DonGia)
        </dd>

        <dt>
            Hình Ảnh
        </dt>

        <dd>
            <img style="width:150px;height:150px" src=" @Html.DisplayFor(model => model.HinhAnh)" alt="Alternate Text" />
        </dd>

        <dt>
            Số Lượng Sản Phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Quay Lại", "Index")
</p>
